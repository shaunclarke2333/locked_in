def gv

pipeline {
    agent any
    tools {
        maven 'maven-3.9.12'
    }

    stages {
        stage ("init") {
            steps {
                script {
                    gv = load "java-maven-app/script.groovy"
                }
            }
        }
        stage("build jar") {
            steps {
                // specifying the directory to run commands 
                dir('java-maven-app') {
                   script {
                        gv.buildJar()
                   }
                }
                
            }
        }
         stage("build image") {
            steps {
                dir('java-maven-app') {
                    script {
                        gv.buildImage()
                   }
                    
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    gv.deployImage()
                }
            }
        }
    }
}